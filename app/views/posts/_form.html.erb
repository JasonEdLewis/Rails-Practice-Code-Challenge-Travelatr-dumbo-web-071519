
<%= form_for(@post) do |f| %>
  
<p><%= f.label :Blogger %></p>
<p><%= f.collection_select :blogger_id, Blogger.all, :id, :name %></p>
<p><%= f.label :Destination %></p>
<p><%= f.collection_select :destination_id, Blogger.all, :id, :name %></p>
<p><%= f.label :title %></p>
<p><%= f.text_field :title%></p>
<p><%= f.label :Content %></p>
<p><%= f.text_area :content %></p>
<%= f.submit "Post!"%>

<% end %>
<br>

